<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Newchecklist">

    <EditText
        android:id="@+id/id_edit_text"
        android:layout_width="820dp"
        android:layout_height="45dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="36dp"
        android:layout_weight="1"
        android:background="#D3D3D3"
        android:hint="Tarefa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listview" />



    <ListView
        android:id="@+id/listview"
        android:layout_width="889dp"
        android:layout_height="593dp"
        android:layout_marginBottom="92dp"
        android:background="#47ADFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="267dp"
        android:layout_height="75dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="casual"
        android:text="CheckList"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/listview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="81dp"
        android:layout_height="68dp"
        android:layout_marginStart="60dp"
        android:fontFamily="casual"
        android:onClick="addItemToList"
        android:text="+"
        android:textAlignment="center"
        android:textSize="34sp"
        app:backgroundTint="#05B1FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toEndOf="@+id/id_edit_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971" />
</androidx.constraintlayout.widget.ConstraintLayout>